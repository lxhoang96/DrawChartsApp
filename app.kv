<MainWindow>:
    name: 'main'
    Button:
        text: 'Go to draw'
        on_release:
            root.manager.current = 'LineChart'
            root.manager.transition.direction = 'left'
<LineChartWindow>:
    name: 'LineChart'

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Title:'
            TextInput:
                id: title
                multiline: False
                write_tab: False
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Data:'
            TextInput:
                id: values
                multiline: False
                write_tab: False
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Objects:'
            TextInput:
                id: objects
                multiline: False
                write_tab: False
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Name:'
            TextInput:
                id: y_name
                multiline: False
                write_tab: False
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Unit:'
            TextInput:
                id: unit
                multiline: False
                write_tab: False


BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.1)
        Button:
            background_normal: ''
            background_color: 0,0,0,1
            text: 'File'
            size_hint: None, None
            width: 40

#                id:
#                values:

        Button:
            background_normal: ''
            background_color: 0,0,0,1
            size_hint: None, None
            width: 40
            text: 'Edit'
#                id:
#                values:

        Button:
            background_normal: ''
            background_color: 0,0,0,1
            size_hint: None, None
            width: 40
            text: 'Draw'
#                id:
#                values:

        Button:
            background_normal: ''
            background_color: 0,0,0,1
            size_hint: None, None
            width: 40
            text: 'Run'
#                id:
#                values:
        Button:
            background_normal: ''
            background_color: 0,0,0,1
            size_hint: None, None
            width: 40
            text: 'Help'
#                id:
#                values:

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.9)
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.2, 1)
            Label:
                text: 'Choose a chart type:'
            Spinner:
                text: ''
                values: app.list_chart
                id: kind_chart
                on_text:
                    type.values = app.type_charts(self.text)
            Spinner:
                text: ''
                id: type

            Button:
                text: 'Draw'
    #            on_press:

        BoxLayout:

            orientation: 'vertical'
            size_hint: (0.8, 1)
            BoxLayout:
                size_hint: (1, 0.3)
                WindowManager:
                    MainWindow:
                    LineChartWindow:
            BoxLayout:
                size_hint: (1, 0.7)
                background_normal: ''
                background_color: 1,1,1
                id: draw_chart
